sudo add-apt-repository ppa:ondrej/php -y
sudo apt-get install software-properties-common git apache2 mysql-server php7.4 php-pear php7.4-curl php7.4-dev php7.4-gd php7.4-mbstring php7.4-zip php7.4-mysql php7.4-xml -y
sudo apt-get upgrade -y

sudo mkdir -p /etc/apache2/logs/
sudo a2enmod rewrite
systemctl reload apache2