#!/bin/bash



case $action in
    --app-react-app | --app-react-project)
        cmd="create-${action[@]:6}"
        for name in $params
        do
            if [[ ! $(is_dir "$web_path/$name") || $(confirm "¿Deseas eliminar $name?" Y) ]]; then
                delete "$web_path/$name"
                npx $cmd $(path_go $web_path/$name)
            fi
        done
    ;;
    --app-laravel)
        for name in $params
        do
            if [[ ! $(is_dir "$web_path/$name") || $(confirm "¿Deseas eliminar $name?" Y) ]]; then
                delete "$web_path/$name"
                composer create-project --prefer-dist laravel/laravel $(path_go $web_path/$name)
            fi
        done
    ;;
esac